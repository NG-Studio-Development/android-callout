<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialogLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#55000000"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvAddressInfo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="@drawable/left_filter_button_active"
        android:gravity="center"
        android:padding="5dp"
        android:text="Выберите адрес, куда вызвать исполнителя"
        android:textColor="@color/white"
        android:textSize="13dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvAddressInfo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/arrow_down" />

    <ImageView
        android:id="@+id/searchInfoArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/arrow_up_left" />

    <TextView
        android:id="@+id/screenInfo"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/searchInfoArrow"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/left_filter_button_active"
        android:gravity="center"
        android:padding="5dp"
        android:text="Получите информацию по экрану"
        android:textColor="@color/white"
        android:textSize="13dp" />

    <ImageView
        android:id="@+id/searchLeftArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="85dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/arrow_down_left" />

    <TextView
        android:id="@+id/screenRegistration"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/searchLeftArrow"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="35dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/left_filter_button_active"
        android:gravity="center"
        android:padding="5dp"
        android:text="Здесь можно зарегестрироваться"
        android:textColor="@color/white"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/screenCabinet"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/searchCabinetArrow"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/left_filter_button_active"
        android:gravity="center"
        android:padding="5dp"
        android:text="Заходите в свой кабинет"
        android:textColor="@color/white"
        android:textSize="13dp" />

    <ImageView
        android:id="@+id/searchCabinetArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="70dp"
        android:layout_toRightOf="@id/searchLeftArrow"
        android:src="@drawable/arrow_down_left" />


    <ImageView
        android:id="@+id/searchRightArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="85dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/arrow_down" />

    <ImageView
        android:id="@+id/searchFavoritesArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:layout_marginRight="70dp"
        android:layout_toLeftOf="@id/searchRightArrow"
        android:src="@drawable/arrow_down" />

    <TextView
        android:id="@+id/screenExit"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/searchRightArrow"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="35dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/left_filter_button_active"
        android:gravity="center"
        android:padding="5dp"
        android:text="Можно выйти и сменить свой аккаунт"
        android:textColor="@color/white"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/screenFavorites"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/searchFavoritesArrow"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/left_filter_button_active"
        android:gravity="center"
        android:padding="5dp"
        android:text="Ваш список избранного"
        android:textColor="@color/white"
        android:textSize="13dp" />


</RelativeLayout>