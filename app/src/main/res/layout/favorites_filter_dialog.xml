<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialogLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#40000000"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/searchInfoArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="80dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/arrow_up_right" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/arrow_up_left" />

    <TextView
        android:id="@+id/screenInfo"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/searchInfoArrow"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/left_filter_button_active"
        android:gravity="center"
        android:padding="5dp"
        android:text="Отобрать исполнителя по рейтингу"
        android:textColor="@color/white"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/screenAddress"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/searchInfoArrow"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/left_filter_button_active"
        android:gravity="center"
        android:padding="5dp"
        android:text="Отобрать исполнителя по расстоянию"
        android:textColor="@color/white"
        android:textSize="13dp" />


</RelativeLayout>