<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:layout_centerVertical="true"
        android:gravity="center">

        <su.whs.call.views.IconButton
            android:id="@+id/selectFacebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/loginSelectorHorizontalSpace"
            android:gravity="center"
            app:drawable="@drawable/facebook_icon"
            app:text="        FACEBOOK         " />

        <su.whs.call.views.IconButton
            android:id="@+id/selectVkontakte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/selectFacebook"

            android:gravity="center"
            app:drawable="@drawable/vkontakte_icon"
            app:text="     ВКОНТАКТЕ     " />

        <su.whs.call.views.IconButton
            android:id="@+id/selectOdnoklassniki"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/selectFacebook"
            android:layout_marginTop="12dp"
            app:drawable="@drawable/odnoklassniki_icon"
            app:text="ОДНОКЛАССНИКИ" />

        <su.whs.call.views.IconButton
            android:id="@+id/selectEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/selectVkontakte"
            android:layout_below="@id/selectVkontakte"
            android:layout_marginTop="12dp"
            android:gravity="center"
            app:drawable="@drawable/email_icon"
            app:text="          E-MAIL          ">

        </su.whs.call.views.IconButton>

    </RelativeLayout>

</RelativeLayout>
