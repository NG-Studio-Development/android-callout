<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialogLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#40000000"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/arrowSharing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/arrow_up_left" />

    <ImageView
        android:id="@+id/searchInfoArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="80dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/arrow_down_left" />

    <TextView
        android:id="@+id/screenInfo"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/left_filter_button_active"
        android:gravity="center"
        android:padding="5dp"
        android:text="Нажмите для смены аватара"
        android:textColor="@color/white"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/screenAddress"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/arrowSharing"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-10dp"
        android:background="@drawable/left_filter_button_active"
        android:gravity="center"
        android:padding="5dp"
        android:text="Поделитесь приложением с друзьями"
        android:textColor="@color/white"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/raitingLayout"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/screenAddress"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/left_filter_button_active"
        android:gravity="center"
        android:padding="5dp"
        android:text="Ваш рейтинг"
        android:textColor="@color/white"
        android:textSize="13dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/subcategory"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-30dp"
        android:src="@drawable/arrow_up_right" />

    <TextView
        android:id="@+id/subcategory"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/left_filter_button_active"
        android:gravity="center"
        android:padding="5dp"
        android:text="Ваши подкатегории"
        android:textColor="@color/white"
        android:textSize="13dp" />

    <ImageView
        android:id="@+id/searchInfoArrow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/raitingLayout"
        android:layout_marginRight="80dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/arrow_up_right" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/raitingLayout"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/arrow_up_left" />

    <TextView
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/searchInfoArrow2"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/left_filter_button_active"
        android:gravity="center"
        android:padding="5dp"
        android:text="Общее количество вызовов"
        android:textColor="@color/white"
        android:textSize="13dp" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/searchInfoArrow2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/left_filter_button_active"
        android:gravity="center"
        android:padding="5dp"
        android:text="Нажмите для выбора занятости"
        android:textColor="@color/white"
        android:textSize="13dp" />


</RelativeLayout>