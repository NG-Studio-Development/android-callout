<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:left="@dimen/tabIndicatorOvalOffset" android:right="@dimen/tabIndicatorOvalOffset" android:bottom="@dimen/tabIndicatorOvalOffset">
        <shape android:shape="oval">
            <solid android:color="@color/orange"></solid>
        </shape>
    </item>
    <item android:left="-8dp" android:right="-8dp" android:bottom="-5dp" android:top="2dp">
        <shape android:shape="oval">
            <solid android:color="@color/white"></solid>
        </shape>
    </item>
    <item android:top="@dimen/tabIndicatorTransparentSpace">
        <shape android:shape="rectangle">
            <solid android:color="@color/orange"></solid>
        </shape>
    </item>
    <item android:top="@dimen/tabIndicatorTransparentSpace" android:right="2dp" android:left="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"></solid>
        </shape>
    </item>
        
</layer-list>
